<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp">


        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:gravity="center"
            android:textColor="#1a87da"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:id="@+id/Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16dp"
            android:layout_marginLeft="35dp"
            android:textColor="@color/black"/>


        <EditText
            android:id="@+id/border1"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round"
            android:backgroundTint="#d2d2db"
            android:ems="10"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorLink="#331010" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/border2"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:backgroundTint="#d2d2db"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/black"
            android:padding="15dp" />


        <TextView
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/border3"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="32dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="15dp"
                android:background="@drawable/round"
                android:backgroundTint="#d2d2db"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:id="@+id/Confirmpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="16dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/border4"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="32dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmpass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="15dp"
                android:background="@drawable/round"
                android:backgroundTint="#d2d2db"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="23dp">

            <CheckBox
                android:id="@+id/checkb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Agree with"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="Terms And Condtions "
                android:textColor="#1a87da"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/round"
            android:backgroundTint="#1a87da"
            android:text="Sign Up"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="Already have an account?"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/login"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginStart="2dp"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="Login"
                android:textColor="#1a87da" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>