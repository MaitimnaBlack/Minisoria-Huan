<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".accesories">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="1dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="Customized Accessories"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="170dp"
                        android:layout_height="200dp">

                        <ImageView
                            android:id="@+id/product"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/product"/>

                        <ImageView
                            android:id="@+id/accessories1"
                            android:layout_width="165dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            app:srcCompat="@drawable/accessories"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="170dp"
                            android:text="00.0"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="170dp"
                        android:layout_height="200dp">

                        <ImageView
                            android:id="@+id/product2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/product"/>

                        <ImageView
                            android:id="@+id/accessories2"
                            android:layout_width="165dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            app:srcCompat="@drawable/bracelet"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="170dp"
                            android:text="00.0"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="170dp"
                        android:layout_height="200dp">

                        <ImageView
                            android:id="@+id/product3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/product"/>

                        <ImageView
                            android:id="@+id/accessories3"
                            android:layout_width="165dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            app:srcCompat="@drawable/totebag"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="170dp"
                            android:text="00.0"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="170dp"
                        android:layout_height="200dp">

                        <ImageView
                            android:id="@+id/product4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/product"/>

                        <ImageView
                            android:id="@+id/accessories4"
                            android:layout_width="165dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            app:srcCompat="@drawable/keychain"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="170dp"
                            android:text="00.0"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/second"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35dp"
                        android:layout_marginBottom="20dp"
                        android:text="Secondhand"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>


                    <FrameLayout
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:id="@+id/product5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/product"/>

                        <ImageView
                            android:id="@+id/accessories5"
                            android:layout_width="165dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            app:srcCompat="@drawable/toy"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="170dp"
                            android:text="00.0"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Items"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>


                    <FrameLayout
                        android:layout_width="170dp"
                        android:layout_height="200dp">

                        <ImageView
                            android:id="@+id/product6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/product"/>

                        <ImageView
                            android:id="@+id/accessories6"
                            android:layout_width="165dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            app:srcCompat="@drawable/clothes"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="170dp"
                            android:text="00.0"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>